<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ReallyBadMoodActivity"
    android:background="@color/SadSmiley">


    <ImageView
        android:id="@+id/activity_sad"
        android:layout_width="385dp"
        android:layout_height="@dimen/size_image_height"
        android:layout_marginStart="@dimen/smiley_marginStart"
        android:layout_marginTop="@dimen/smiley_marginTop"
        android:layout_marginEnd="@dimen/smiley_marginEnd"
        android:layout_marginBottom="@dimen/smiley_marginBottom"
        android:contentDescription="sad"
        android:src="@drawable/smiley_sad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sad_note_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="sadNoteBtn"
        android:src="@drawable/ic_note_add_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/note_btn"/>

    <ImageView

        android:id="@+id/sad_history_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="sadHistoryBtn"
        android:src="@drawable/ic_history_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/history_btn" />


</android.support.constraint.ConstraintLayout>

