<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.NormalMood"
    android:background="@color/NormalSmiley">


    <ImageView
        android:id="@+id/activity_normal_mood"
        android:layout_width="385dp"
        android:layout_height="@dimen/size_image_height"
        android:layout_marginStart="@dimen/smiley_marginStart"
        android:layout_marginTop="@dimen/smiley_marginTop"
        android:layout_marginEnd="@dimen/smiley_marginEnd"
        android:layout_marginBottom="@dimen/smiley_marginBottom"
        android:contentDescription="normal"
        android:src="@drawable/smiley_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/normal_note_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="normalNoteBtn"
        android:src="@drawable/ic_note_add_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/note_btn"/>

    <ImageView
        android:id="@+id/normal_email_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="8dp"
        android:onClick="normalEmailBtn"
        android:src="@drawable/ic_mail_outline_black_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <ImageView

        android:id="@+id/normal_history_btn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="normalHistoryBtn"
        android:src="@drawable/ic_history_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/history_btn" />


</android.support.constraint.ConstraintLayout>

