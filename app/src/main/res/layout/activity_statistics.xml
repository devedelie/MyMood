            android:layout_marginTop="@dimen/ImageView_layout_marginTop"
            android:contentDescription="TODO"
            android:onClick="Comment3daysAgo"
            android:src="@drawable/ic_comment_black_48px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_mood_statistics_2_days_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/TextView_layout_marginStart"
